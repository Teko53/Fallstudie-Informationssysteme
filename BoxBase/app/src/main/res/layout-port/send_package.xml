<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <include
        android:id="@+id/top_bar_logo_avatar"
        layout="@layout/universal_top_bar_logo_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/activity_standard_weight">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/delivery_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/first_title_to_top_bar"
                        android:text="@string/title_send_package_delivery_address"
                        android:textAppearance="@style/title" />

                    <!-- Input fields for Delivery address -->

                    <EditText
                        android:id="@+id/box_receiver"
                        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_height"
                        android:layout_marginTop="@dimen/box_to_upper_title"
                        android:background="@drawable/shape_box_text_input"
                        android:hapticFeedbackEnabled="false"
                        android:hint="@string/hint_receiver"
                        android:importantForAutofill="no"
                        android:lineSpacingExtra="12sp"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:textAppearance="@style/text"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint"
                        android:textIsSelectable="false"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/box_to_box_small" >

                        <EditText
                            android:id="@+id/box_street"
                            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_height"
                            android:layout_weight="0.4"
                            android:background="@drawable/shape_box_text_input"
                            android:hapticFeedbackEnabled="false"
                            android:hint="@string/hint_street"
                            android:importantForAutofill="no"
                            android:lineSpacingExtra="12sp"
                            android:paddingLeft="12dp"
                            android:paddingTop="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="12dp"
                            android:selectAllOnFocus="false"
                            android:singleLine="true"
                            android:textAppearance="@style/text"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorTextHint"
                            android:textIsSelectable="false"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/box_number"
                            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_height"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/box_to_box_small"
                            android:background="@drawable/shape_box_text_input"
                            android:hapticFeedbackEnabled="false"
                            android:hint="@string/hint_house_number"
                            android:importantForAutofill="no"
                            android:lineSpacingExtra="12sp"
                            android:paddingLeft="12dp"
                            android:paddingTop="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="12dp"
                            android:selectAllOnFocus="false"
                            android:singleLine="true"
                            android:textAppearance="@style/text"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorTextHint"
                            android:textIsSelectable="false"
                            android:textSize="14sp"
                            android:layout_marginStart="@dimen/box_to_box_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/box_to_box_small" >

                        <EditText
                            android:id="@+id/box_postcode"
                            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_height"
                            android:layout_weight="1"
                            android:background="@drawable/shape_box_text_input"
                            android:hapticFeedbackEnabled="false"
                            android:hint="@string/hint_postcode"
                            android:importantForAutofill="no"
                            android:lineSpacingExtra="12sp"
                            android:paddingLeft="12dp"
                            android:paddingTop="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="12dp"
                            android:selectAllOnFocus="false"
                            android:singleLine="true"
                            android:textAppearance="@style/text"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorTextHint"
                            android:textIsSelectable="false"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/box_city"
                            style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_height"
                            android:layout_weight="0.5"
                            android:layout_marginLeft="@dimen/box_to_box_small"
                            android:background="@drawable/shape_box_text_input"
                            android:hapticFeedbackEnabled="false"
                            android:hint="@string/hint_city"
                            android:importantForAutofill="no"
                            android:lineSpacingExtra="12sp"
                            android:paddingLeft="12dp"
                            android:paddingTop="12dp"
                            android:paddingRight="12dp"
                            android:paddingBottom="12dp"
                            android:selectAllOnFocus="false"
                            android:singleLine="true"
                            android:textAppearance="@style/text"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorTextHint"
                            android:textIsSelectable="false"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/box_country"
                        style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_height"
                        android:layout_marginTop="@dimen/box_to_box_small"
                        android:background="@drawable/shape_box_text_input"
                        android:hapticFeedbackEnabled="false"
                        android:hint="@string/hint_country"
                        android:importantForAutofill="no"
                        android:lineSpacingExtra="12sp"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:textAppearance="@style/text"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint"
                        android:textIsSelectable="false"
                        android:textSize="14sp" />

                    <include
                        android:id="@+id/package_size_layout"
                        layout="@layout/universal_package_size_selection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_margin_between_fragments"/>

                    <Button
                        android:id="@+id/button_send_package_confirm"
                        android:layout_width="@dimen/button_big_width"
                        android:layout_height="@dimen/button_big_height"
                        android:layout_marginTop="@dimen/button_to_top"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_button_big_primary_color_bright"
                        android:text="@string/button_send_package_confirm"
                        android:textAppearance="@style/button_big" />

                    <Button
                        android:id="@+id/button_discard"
                        android:layout_width="@dimen/button_big_width"
                        android:layout_height="@dimen/button_big_height"
                        android:layout_marginTop="@dimen/button_to_button_big"
                        android:layout_marginBottom="@dimen/button_to_bottom"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_button_big_primary_color_dark"
                        android:text="@string/button_discard"
                        android:textAppearance="@style/button_big" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>